<%= render "layouts/navber" %>

<br><br><br><br>

<p class="notice"><%= notice %></p>

<div class="calendar">
  <h1 class="calendar">朝食記録</h1>

  <br>

  <div class="row">
    <div class="col-md-4">
      <div class="breakfast">朝食入力</div>
      <%= form_with model: @post, local: true do |form| %>
        <table class="table">
          <div>
            <%= form.label :title, "タイトル" %>
            <%= form.text_field :title %>
          </div>

          <br>

          <div>
            <%= form.file_field :image, :accept => 'image/*' %>
          </div>

          <br>

          <div>
            <%= form.text_area :content %>
          </div>

          <br>

          <div>
            <%= form.label :start_time, "記録日" %>
            <%= form.date_field :start_time %>
          </div>
          <div>
            <%= form.submit "投稿" %>
          </div>
        </table>
      <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <%= month_calendar events: @posts do |date,posts| %>
      <%= date.day %>

      <% posts.each do |post| %>
        <div>
          <%= link_to post.title, post %>
        </div>
      <% end %>
    <% end %>
  </div>
