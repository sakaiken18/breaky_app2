<%= render "layouts/navber" %>

<br><br><br><br>

<p class="notice"><%= notice %></p>

<div class="calendar">
  <h1 class="calendar">朝食記録</h1>

  <br>

  <div class="row">
    <div class="col-md-4">
      <%= render "form", button_value: "投稿" %>
    </div>
  </div>
  <div class="col-md-8">
    <%= month_calendar events: @posts do |date,posts| %>
      <%= date.day %>

      <% posts.each do |post| %>
        <div>
          <%= link_to post.title, post %>
        </div>
      <% end %>
    <% end %>
  </div>
