<div class="posts_card">
  <div class="row">
    <div class="grid">
      <% @posts.each do |post| %>
        <div class="col md-4">
          <div class="card content-card border-dark mb-3">
            <div class="card-body">
              <% if post.image? %>
                <%= image_tag(post.image.to_s, size: "100x210", class:"card-img-top", alt:"Card image cap") %>
              <% else %>
                <img class="card-img-top" src="/assets/noimage.jpg" alt="...">
              <% end %>

              <div class="card-body p-4">
                <div class="text-center">
                  <h5 class="fw-bolder"><%= link_to post.title, post %></h5>
                  <p><%= post.start_time.strftime("%Y年%m月%d日") %></p>
                  <p><%= post.user.nickname.present? ? "投稿者： #{post.user.nickname}" : "投稿者：名無しさん" %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
